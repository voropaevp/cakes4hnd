{
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "react/jsx-tag-spacing/beforeSelfClosing": {
      "closingSlash": "never",
      "beforeSelfClosing": "never",
      "afterOpening": "never",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/valid-expect": "error"
    }
  },
  "env": {
    "jest/globals": true
  }
}
